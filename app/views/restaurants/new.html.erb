<h1>Add a restaurant</h1>
<%= form_for :restaurant, url: restaurants_path do |f| %>


	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name%>
	</p>
	<p>
		<%= f.label :description%><br>
		<%= f.text_area :description%>
	</p>
	<p>
		<%= f.label :address%><br>
		<%= f.text_area :address%>
	</p>
	<p>
		<%= f.label :phone_number%><br>
		<%= f.text_field :phone_number%>
	</p>
	<p>
		<%= f.submit%>
	</p>
<% end %>

<%= link_to "Back", restaurants_path %>